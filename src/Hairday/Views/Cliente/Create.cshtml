@model Hairday.Models.Cliente

@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="main-container">
    <!-- Classe principal igual ao login -->
    <div class="image-side">
        <img src="~/img/barbearia.png" alt="Imagem Barbearia" class="imagem-fundo" />
    </div>
    <div class="form-side">
        <div class="form-box">
            <!-- Alterado para form-box -->
            <div class="logo">
                <!-- Container para logo como no login -->
                <img src="~/img/logoP.png" alt="Logo Hair Day" />
            </div>

            <h2>Cadastre-se</h2>
            <p class="subtitle">Crie sua conta e agende seu horário em instantes!</p> <!-- Classe subtitle adicionada -->

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input asp-for="nome" placeholder="Nome completo" required />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="email" placeholder="Email" required type="email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="senha" placeholder="Senha" type="password" required />
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="cidade" placeholder="Cidade" required />
                    <span asp-validation-for="cidade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="telefone" placeholder="Telefone" required />
                    <span asp-validation-for="telefone" class="text-danger"></span>
                </div>

                <button type="submit">Cadastrar-se</button>
            </form>

            <div class="register">
                <!-- Link para login como no Capturar5 -->
                <p>Já tem uma conta? <a href="@Url.Action("Login", "Account")">Faça login</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const alert = document.getElementById('msg-alert');
            if (alert) {
                setTimeout(() => {
                    alert.style.transition = 'opacity 0.5s ease';
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 500);
                }, 3000);
            }
        });
    </script>
}