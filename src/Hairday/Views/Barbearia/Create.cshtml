@model Hairday.Models.Barbearia

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Barbearia.cshtml";
}

<div class="container">
    <!-- Frame 13 - Título -->
    <div class="frame frame-title">
        <h1>Cadastre sua barbearia</h1>
        <p class="subtitle">O próximo passo do seu negócio é aqui!</p>
    </div>
<div>
 
    <!-- Formulário Principal -->
    <div class="form-container">
        <!-- Frame 12 - Tabela de campos -->
        <div class="frame frame-form">
            <form method="post">
                <table class="form-table">
                    <tr>
                        <td><label for="nome">Nome Completo</label></td>
                        <td><input type="text" id="nome" name="nome" placeholder="João Feminos"></td>
                    </tr>
                    <tr>
                        <td><label for="chave">Cidade</label></td>
                        <td><input type="text" id="chave" name="chave" placeholder="Minas Gerais"></td>
                    </tr>
                    <tr>
                        <td><label for="cnpj">CNPJ</label></td>
                        <td><input type="text" id="cnpj" name="cnpj" placeholder="22.222.222/000"></td>
                    </tr>
                    <tr>
                        <td><label for="telefone">Telefone</label></td>
                        <td><input type="tel" id="telefone" name="telefone" placeholder="(00) 00000-0000"></td>
                    </tr>
                    <tr>
                        <td><label for="email">Email</label></td>
                        <td><input type="email" id="email" name="email" placeholder="abc@gmail.com"></td>
                    </tr>
                    <tr>
                        <td><label for="senha">Senha</label></td>
                        <td><input type="password" id="senha" name="senha" placeholder="**********"></td>
                    </tr>
                    <tr>
                        <td><label for="endereco">Endereço</label></td>
                        <td><input type="text" id="endereco" name="endereco" placeholder="Rua das Flores, Bairro Pereira"></td>
                    </tr>
                </table>

                <!-- Frame 7 - Botão de cadastro -->
                <div class="frame frame-button">
                    <button type="submit" class="cadastrar-btn">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
