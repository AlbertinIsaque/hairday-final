<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hairday</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hairday.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/cabecalhoBarbeiro.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body>
    <header class="header-black">
        <div class="img-logo">
            <img class="logo-img" src="~/img/logo.png" asp-append-version="true" />

        </div>
        <nav class="nav-links">
            <div class="nav-link">
                <a asp-controller="Home" asp-action="Index">Homepage</a>
            </div>
            <div class="nav-link">
                <a asp-controller="Home" asp-action="FiltrarPorCabelo">Cabelo</a>
            </div>
            <div class="nav-link">
                <a asp-controller="Home" asp-action="FiltrarPorBarba">Barba</a>
            </div>
            <div class="nav-link">
                <a asp-controller="Home" asp-action="FiltrarPorSpa">SPA</a>
            </div>
            <div class="nav-link">
                <a asp-controller="Home" asp-action="FiltrarPorSobrancelha">Sobrancelha</a>
            </div>
            <div class="nav-link">
                <a asp-controller="Home" asp-action="FiltrarPorMassagem">Massagem</a>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
