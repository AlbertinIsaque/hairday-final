<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hairday</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hairday.styles.css" asp-append-version="true" />
</head>
<body>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>



    <footer class="footer-container">
        <div class="footer-content d-flex justify-content-between align-items-center flex-wrap">
            <div class="footer-links text-white">
                <h5 class="mb-3">Links Úteis</h5>
                <ul class="list-unstyled">
                    <li><a class="footer-link">• Política de privacidade</a></li>
                    <li><a class="footer-link">• Termos de uso</a></li>
                    <li><a  class="footer-link">• Sobre nós</a></li>
                    <li><a class="footer-link">• Contato</a></li>
                </ul>
            </div>

            <div class="footer-slogan text-center text-white">
                <h5 class="slogan-loader">
                    HairDay Facilita
                    <div class="slogan-words">
                        <span class="slogan-word">sua vida!</span>
                        <span class="slogan-word">seu trabalho</span>
                        <span class="slogan-word">seus horários</span>
                        <span class="slogan-word">seu dia!</span>
                        <span class="slogan-word">sua vida!</span> <!-- repete para looping suave -->
                    </div>
                </h5>
            </div>

            <div class="footer-social text-white text-end">
                <div href="#" class="footer-logo mb-2">
                    <img src="~/Assets/HairDay Logo.png" alt="Hair Day Logo" style="height: 100px;">
                </div>
                <div class="social-icons">
                    <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-youtube"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-tiktok"></i></a>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/homepage.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
