@model Hairday.ViewModels.ServicoFormViewModel

@{
    ViewData["Title"] = "Selecionar Serviços";
}

<h2>Selecionar Serviços</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CPF_barbeiro" />
    <input type="hidden" asp-for="CNPJ_barbearia" />

    @for (int i = 0; i < Model.ServicosDisponiveis.Count; i++)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input"
                   asp-for="ServicosDisponiveis[@i].Selecionado" />
            <label class="form-check-label">
                @Model.ServicosDisponiveis[i].NomeServico
            </label>

            <input type="hidden" asp-for="ServicosDisponiveis[@i].NomeServico" />

            <div class="form-group mt-1">
                <label>Preço:</label>
                <input asp-for="ServicosDisponiveis[@i].Preco" class="form-control" type="number" step="0.01" />
            </div>
        </div>
        <hr />
    }

    <button type="submit" class="btn btn-primary">Salvar Serviços</button>
</form>

