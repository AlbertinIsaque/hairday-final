<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Bem-vindo ao HairDay</h1>
            <p class="lead">Encontre a barbearia ideal para você</p>

            <form asp-action="BuscarBarbeariaPorNome" method="get" class="form-inline justify-content-center mt-4">
                <div class="input-group w-75">
                    <input type="text" name="nome" class="form-control" placeholder="Digite o nome da barbearia" required />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </div>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.Mensagem as string))
            {
                <div class="alert alert-warning mt-4">@ViewBag.Mensagem</div>
            }

            @if (Model != null && Model.Any())
            {
                <ul class="list-group list-group-flush mt-4">
                    @foreach (var barbearia in Model)
                    {
                        <li class="list-group-item">@barbearia.Nome</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>