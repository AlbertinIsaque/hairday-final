@model List<Hairday.Models.Barbearia>
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Buscar Barbearia por Nome";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="BuscarBarbeariaPorNome" method="get" class="mb-5">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome da Barbearia:</label>
        <input type="text" name="nome" class="form-control" placeholder="Digite o nome da barbearia" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var barbearia in Model)
        {
            <div class="col">
                <div class="card h-100 border border-dark shadow-lg rounded" style="max-width: 280px; margin: 0 auto;">
                    <div class="text-center mt-3">
                        <img src="~/Assets/ilustradorCard.png" class="rounded-circle" alt="Calendário" width="80">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">@barbearia.nome</h5>
                        <p class="card-text text-center"><strong>Horário:</strong> 17:00 - 17:30 Seg</p>
                        <p><strong>Endereço:</strong> @barbearia.cidade</p>
                        <p><strong>Telefone:</strong> @barbearia.telefone</p>
                        <p><strong>Nome do Barbeiro:</strong> @barbearia.barbeiros</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a class="btn btn-dark w-50 me-1 shadow"
                           asp-controller="EscolhaServico"
                           asp-action="Detalhes"
                           asp-route-cnpj=@barbearia.CNPJ_barbearia>
                            Ver Barbearia
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (Model != null)
{
    <div class="alert alert-warning mt-4">
        Nenhuma barbearia encontrada.
    </div>
}
